/* Custom Blocks and Admonitions */

.custom-block
  border-radius: 0.4rem
  color $textColor
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip
    background-color $boxBgColor
    border-color $tipGrey
  &.warning
    background-color $boxBgColor
    border-color $warningPink
    color $textColor
    .custom-block-title
      color $textColor
    a
      color $accentColor
  &.danger
    background-color $boxBgColor
    border-color $gazpacho
    color $textColor
    .custom-block-title
      color $textColor
    a
      color $ocean
  &.teaser
    margin auto
    display block
    text-align center
    font-weight lighter
    background-color $boxBgColor
    border-top-color $boxBgColor
    padding 0.8rem 1.6rem
    border-radius 4px
    transition background-color .1s ease
    //box-sizing border-box
    width auto
    img
      display block
      margin-left auto
      margin-right auto
    .custom-block-title
      border-bottom-width 0

/* end of Custom Blocks and Admonitions */

